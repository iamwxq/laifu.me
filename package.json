{
  "name": "blog",
  "type": "module",
  "private": true,
  "sideEffects": false,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "lint": "eslint --ignore-pattern .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint . --fix",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "db:test": "tsx scripts/db.test.ts",
    "db:update": "tsx scripts/db.update.ts",
    "db:delete": "tsx scripts/db.delete.ts",
    "db:restore": "tsx scripts/db.restore.ts",
    "db:migrate": "prisma migrate dev --name init",
    "prepare": "husky"
  },
  "dependencies": {
    "@mdx-js/rollup": "^3.1.0",
    "@prisma/client": "5.21.1",
    "@remix-run/node": "^2.14.0",
    "@remix-run/react": "^2.14.0",
    "@remix-run/serve": "^2.14.0",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "isbot": "^5.1.17",
    "lucide-react": "^0.454.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rehype-slug": "^6.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.0",
    "remark-mdx-frontmatter": "^5.0.0",
    "remix-themes": "^1.5.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.8.0",
    "@eslint-react/eslint-plugin": "^1.16.1",
    "@remix-run/dev": "^2.14.0",
    "@shikijs/rehype": "^1.22.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.14.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "eslint-plugin-tailwindcss": "^3.17.5",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.48",
    "prisma": "^5.22.0",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vite-tsconfig-paths": "^5.1.2"
  }
}
